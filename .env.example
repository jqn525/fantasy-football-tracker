# Server Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=generate-a-secure-random-string-here-use-32-characters-minimum

# Yahoo API Credentials
YAHOO_CLIENT_ID=your-yahoo-client-id
YAHOO_CLIENT_SECRET=your-yahoo-client-secret
YAHOO_REDIRECT_URI=https://your-app.vercel.app/auth/callback

# Turso Database (get from https://turso.tech)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Perplexity AI
PERPLEXITY_API_KEY=pplx-your-api-key
PERPLEXITY_MODEL=pplx-70b-online
PERPLEXITY_MAX_TOKENS=1000
PERPLEXITY_TEMPERATURE=0.2

# AI Research Settings
AI_RESEARCH_ENABLED=true
AI_RESEARCH_INTERVAL_HOURS=6
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_QUERIES_PER_DAY=50

# News APIs (optional)
NEWS_API_KEY=your-newsapi-key-optional
ESPN_RSS_FEED=https://www.espn.com/espn/rss/nfl/news

# Email Configuration (optional)
SENDGRID_API_KEY=your-sendgrid-key-optional
EMAIL_FROM=noreply@yourapp.com

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_AUTO_REFRESH=true
REFRESH_INTERVAL_MINUTES=30